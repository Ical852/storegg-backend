<%- include('../../partials/header.ejs') %>
    <%- include('../../partials/navbar.ejs') %>
        <%- include('../../partials/sidebar.ejs') %>
            <div class="content-wrapper">
                <section class="content-header">
                    <div class="container-fluid">
                        <div class="row mb-2">
                            <div class="col-sm-6">
                                <h1>Edit Nominal <%= nominal.coinName %> </h1>
                            </div>
                            <div class="col-sm-6">
                                <ol class="breadcrumb float-sm-right">
                                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                                    <li class="breadcrumb-item"><a href="/nominal">Nominal</a></li>
                                    <li class="breadcrumb-item active">Edit Nominal <%= nominal.coinName %> </li>
                                </ol>
                            </div>
                        </div>
                    </div>
                </section>

                <section class="content">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-12">
                                <div class="card card-primary">
                                    <div class="card-header">
                                        <h3 class="card-title">Edit Nominal <%= nominal.coinName %> </h3>
                                    </div>
                                    <form action="/nominal/update/<%= nominal.id %> " method="post">
                                        <div class="card-body">
                                            <div class="form-group">
                                                <label>Nama Koin</label>
                                                <select class="form-control select2" style="width: 100%;" name="coinName" required>
                                                    <option selected="selected" disabled>Pilih Koin</option>
                                                    <option value="Gold" <%- nominal.coinName == 'Gold' ? 'selected' : '' %>>Gold</option>
                                                    <option value="Diamond" <%- nominal.coinName == 'Diamond' ? 'selected' : '' %>>Diamond</option>
                                                    <option value="Jewel" <%- nominal.coinName == 'Jewel' ? 'selected' : '' %>>Jewel</option>
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label for="exampleInputEmail1">Jumlah Koin</label>
                                                <input type="number" class="form-control" id="coinQuantity" name="coinQuantity" placeholder="Masukkan Jumlah Koin" required value="<%= nominal.coinQuantity %>">
                                            </div>
                                            <div class="form-group">
                                                <label for="exampleInputEmail1">Harga</label>
                                                <input type="number" class="form-control" id="price" name="price" placeholder="Masukkan Harga" required value="<%= nominal.price %>">
                                            </div>
                                        </div>
                                        <div class="card-footer">
                                            <button type="submit" class="btn btn-primary">Simpan</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
    <%- include('../../partials/footer.ejs') %>
<%- include('../../partials/js.ejs') %>