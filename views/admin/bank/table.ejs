<table id="example2" class="table table-bordered table-hover">
    <a href="/bank/create">
        <button class="btn btn-primary mb-3"><i class="fa fa-plus"></i> Tambah Bank</button>
    </a>
    <thead>
        <tr>
            <th>No.</th>
            <th>Nama Pemilik</th>
            <th>Nama Bank</th>
            <th>No. Rekening</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        <% bank.map((data, index) => { %>
            <tr>
                <td><%= index+1 %> </td>
                <td><%= data.name %> </td>
                <td><%= data.bankName %> </td>
                <td><%= data.noRekening %> </td>
                <td>
                    <a href="/bank/edit/<%= data.id %>">
                        <button class="btn btn-success">
                            <i class="fa fa-edit"></i> Edit
                        </button>
                    </a>
                    <form action="/bank/delete/<%= data.id %>" class="d-inline" method="post">
                        <button class="btn btn-danger" onclick="return confirm(`delete data bank <%= data.name %> ?`)">
                            <i class="fa fa-trash"></i> Delete
                        </button>
                    </form>
                </td>
            </tr>
        <% }) %> 
</table>