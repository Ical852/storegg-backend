<table id="example2" class="table table-bordered table-hover">
    <a href="/category/create">
        <button class="btn btn-primary mb-3"><i class="fa fa-plus"></i> Tambah Kategori</button>
    </a>
    <thead>
        <tr>
            <th>No.</th>
            <th>Name</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        <% category.map((data, index) => { %>
            <tr>
                <td><%= index+1 %> </td>
                <td><%= data.name %> </td>
                <td>
                    <a href="/category/edit/<%= data.id %>">
                        <button class="btn btn-success">
                            <i class="fa fa-edit"></i> Edit
                        </button>
                    </a>
                    <form action="/category/delete/<%= data.id %>" class="d-inline" method="post">
                        <button class="btn btn-danger" onclick="return confirm(`delete data <%= data.name %> ?`)">
                            <i class="fa fa-trash"></i> Delete
                        </button>
                    </form>
                </td>
            </tr>
        <% }) %> 
</table>